<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/background_first_vertical"
    tools:context=".Coffee">

    <ImageView
        android:layout_width="@dimen/verticalLabelDimen"
        android:layout_height="@dimen/verticalLabelDimen"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/verticalLabelMarginTop"
        android:background="@drawable/circle" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="@dimen/verticalLabelDimen"
        android:layout_height="@dimen/verticalLabelDimen"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/verticalLabelMarginTop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:srcCompat="@drawable/pic"/>

    <TextView
        android:id="@+id/headline"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/verticalListviewMarginTop"
        android:background="@drawable/second_activity_txtview_bg"
        android:gravity="center"
        android:textSize="@dimen/headlineTextSize"
        android:textColor="@color/black"/>

    <WebView
        android:scrollbars="vertical"
        android:padding="@dimen/textPadding"
        android:id="@+id/textCoffeeInfo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/headline"
        android:background="@color/bg_pic"
        android:textColor="@color/black"
        tools:ignore="WebViewLayout" />


</RelativeLayout>