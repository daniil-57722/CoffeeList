<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_horizontal"
    tools:context=".Coffee"
    tools:ignore="WebViewLayout">

    <TextView
        android:id="@+id/headline"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/horizontalDescriptionMarginTop"
        android:background="@drawable/second_activity_txtview_bg"
        android:gravity="center"
        android:textSize="@dimen/headlineTextSize"
        android:textColor="@color/black"/>

    <WebView
        android:scrollbars="vertical"
        android:padding="@dimen/textPadding"
        android:id="@+id/textCoffeeInfo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/headline"
        android:background="@color/bg_pic"
        android:textColor="@color/black"/>


</RelativeLayout>